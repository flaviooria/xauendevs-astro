---
import LogoRD from "./LogoRD.astro";
---

<div
  class="flex flex-col md:flex-row gap-10 bg-accent p-8 md:p-10 rounded-3xl justify-between items-center"
>
  <div class="flex flex-col items-center md:flex-row gap-10">
    <LogoRD />
    <div class="flex flex-col">
      <span class="font-semibold text-3xl">Nuevo podcast</span>
      <span class="text-xl font-medium">¡Un nuevo episodio cada mes!</span>
    </div>
  </div>
  <div>
    <button
      class="bg-black rounded-3xl text-white text-lg px-10 py-5 font-semibold"
    >
      Síguenos en Spotify
    </button>
  </div>
</div>
